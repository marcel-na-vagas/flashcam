<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   initialize="init()"
			   backgroundColor="white">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			// Imports
			import mx.controls.Alert;
			import flash.media.Camera;
				
			// Functions
			public function init(): void {
				log("Flashcam initialized!");
				//mx.controls.Alert.show("Testing alert");	
			}
			
			private function initCamera(event:Event):void{
				var cam:Camera = Camera.getCamera();
				if (cam != null)
				{
					cam.addEventListener(StatusEvent.STATUS, statusHandler);
					var vid:Video = new Video();
					vid.attachCamera(cam);
					addChild(vid);
				} else {
					mx.controls.Alert.show("You don't have a camera!");
				}
			}
			
			public function statusHandler(event:StatusEvent):void
			{
				// This event gets dispatched when the user clicks the "Allow" or "Deny"
				// button in the Flash Player Settings dialog box.
				trace(event.code); // "Camera.Muted" or "Camera.Unmuted"
				log(event.code);
			}
			
			public static function log(text: String): void {
				if (ExternalInterface.available)
				{
					ExternalInterface.call("console.log", text);
				}
				return;
			}
		]]>
	</fx:Script>
	
	<mx:VideoDisplay id="video" width="640" height="480" creationComplete="initCamera(event)"/>	

</s:Application>
